<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGoogleMapSample.ClusteringPage"
             xmlns:maps="clr-namespace:Maui.GoogleMaps.Clustering;assembly=Maui.GoogleMaps.Clustering"
             
              Title="Pins">

    <ContentPage.Content>

        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <maps:ClusteredMap x:Name="map"
                    Grid.Row="1"
                    VerticalOptions="FillAndExpand" />

            <Button x:Name="buttonAddPins" Text="Add Pins" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
        </Grid>

    </ContentPage.Content>
</ContentPage>